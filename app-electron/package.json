{
  "name": "portmaster-app",
  "description": "Portmaster Privacy App",
  "repository": "https://github.com/safing/portmaster-ui",
  "license": "GPL-3.0-or-later",
  "scripts": {
    "build": "tsc && cp pages/* dist-src/ && cp package-prod.json dist-src/package.json",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "bundle": "electron-builder -wl --x64 --arm64",
    "start": "npm run build && electron ./dist-src/index.js",
    "pack": "npm install && npm run build && npm run bundle"
  },
  "devDependencies": {
    "@types/hasbin": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "electron": "^20.0.3",
    "electron-builder": "^23.3.3",
    "eslint": "^7.3.1",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "electron-window-state": "^5.0.3",
    "hasbin": "^1.2.3",
    "sudo-prompt": "^9.2.1"
  },
  "electronDownload": {
    "strictSSL": true
  },
  "build": {
    "directories": {
      "output": "dist",
      "app": "dist-src",
      "buildResources": "build"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage",
      "category": "Security"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
